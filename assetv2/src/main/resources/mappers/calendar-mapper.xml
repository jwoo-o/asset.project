<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="calendar">
	<select id="selectLst" resultType="calendarVo">
		select * from planned
	</select>
	<insert id="insertCal">
		insert into planned (name,division,addNrein,seat,title,start,end,mgr,fstRgtWkrNm,fstRgtDtm,lstMdfWkrNm,lstMdfDtm) values(#{name},#{division},#{addNrein},#{seat},#{title},#{start},#{end},#{mgr},#{fstRgtWkrNm},now(),#{lstMdfWkrNm},now())
	</insert>
	<update id="updateCal">
		update planned set name=#{name},division=#{division},addNrein=#{addNrein},seat=#{seat},title=#{title},mgr=#{mgr},lstMdfWkrNm=#{lstMdfWkrNm},lstMdfDtm=now() where no=#{no}
	</update>
	<update id="updateDate">
		update planned set start=#{start},end=#{end},lstMdfWkrNm=#{lstMdfWkrNm},lstMdfDtm=now() where no=#{no}
	</update>
	<delete id="deleteCal">
		delete from planned where no=#{no}
	</delete>
	<update id="updateJoin">
		update planned set joinYN='y',lstMdfWkrNm=#{id},lstMdfDtm=now() where no=#{no}
	</update>
</mapper>